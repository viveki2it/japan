%html
  %head
    %meta{charset: 'utf-8'}
    %meta{'http-equiv'=> 'X-UA-Compatible', content: 'IE=edge,chrome=1'}
    %title= content_for?(:title) ? content_for(:title) : "Jangala Market Beta"
    %meta{name: 'description', content: 'Jangala Market Store'}
    %link{rel: 'shortcut icon', type: 'image/png', href: '/favicon.png'}
    = csrf_meta_tag
    = stylesheet_link_tag 'store'
  %body.modal-open
    .modal-backdrop.in

  / Scripts are in the end of file for better performance
  = render partial: 'shared/footer_script'
  = include_gon init: true, namespace: 'Context'
  = javascript_include_tag "store-app"
  = yield :scripts

