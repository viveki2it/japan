!!!
-#
  /[if lt IE 7]
    %html.no-js.lt-ie9.lt-ie8.lt-ie7
  /[if IE 7]
    %html.no-js.lt-ie9.lt-ie8
  /[if IE 8]
    %html.no-js.lt-ie9


%html
  
  %head
    
    %meta{charset: 'utf-8'}
    %meta{'http-equiv'=> 'X-UA-Compatible', content: 'IE=edge,chrome=1'}
    
    %title= content_for?(:title) ? content_for(:title) : "Jangala Market Beta"
    
    %meta{name: 'description', content: 'Jangala Market Store'}
    
    %link{rel: 'shortcut icon', type: 'image/png', href: '/favicon.png'}
    
    = csrf_meta_tag
    
    -# application_type is defined in the session_helper
    = stylesheet_link_tag application_type
    
    / Javascript to integrate Usabilitytools.
    - if user_is_customer?
      :javascript
        (function() {
          var ff = document.createElement('script'); ff.type = 'text/javascript'; ff.async = true;
          ff.src = 'https://usabilitytools.com/ff/rest/script/37108';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ff, s);
        })();
      
  %body
    
    #header= render partial: 'shared/header'          
    
    
    
    #container{ :class => ((user_signed_in?) ? "l-signed-in" : "l-not-signed-in")}
      = yield
      
      -# Add the loader animation for the loading page
      .m-loader.wrapper.page-loader
        .loader-img
    
    .signup-signin.hidden#signin-section
      .wrapper
        %h2 Se connecter
        = form_for "user", :url => user_session_path, :html=>{:class =>['new_store','row-fluid']} do |f|
          = f.text_field :email, placeholder: "Votre email"
          = f.password_field :password, placeholder: "Votre mot de passe"
          = f.submit "Se connecter", class: 'btn big color1'
    #footer= render partial: 'shared/footer'

  / Scripts are in the end of file for better performance
  = include_gon init: true, namespace: 'Context'
  
  = javascript_include_tag "#{application_type}-app"
  
  = yield :scripts
